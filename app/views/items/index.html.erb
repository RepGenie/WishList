<h1>Listing items</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Requested by</th>
    <th>Category</th>
    <th>Priority</th>
    <th>Name</th>
    <th>Creator</th>
    <th>Note</th>
    <th>Added date</th>
    <th>Active</th>
    <th>Buyer</th>
    <th>Buy date</th>
    <th>Cost</th>
    <th>Cart</th>
    <th>Cart date</th>
    <th>Url</th>
    <th>Format</th>
    <th>Nonlist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.requested_by %></td>
    <td><%= item.category_id %></td>
    <td><%= item.priority_id %></td>
    <td><%= item.name %></td>
    <td><%= item.creator %></td>
    <td><%= item.note %></td>
    <td><%= item.added_date %></td>
    <td><%= item.active %></td>
    <td><%= item.buyer %></td>
    <td><%= item.buy_date %></td>
    <td><%= item.cost %></td>
    <td><%= item.cart %></td>
    <td><%= item.cart_date %></td>
    <td><%= item.url %></td>
    <td><%= item.format_id %></td>
    <td><%= item.nonlist %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

