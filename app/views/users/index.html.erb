<h1>Listing users</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Group</th>
    <th>Name</th>
    <th>Password</th>
    <th>Active</th>
    <th>Admin</th>
    <th>Email</th>
    <th>Primary</th>
    <th>Invited</th>
    <th>Last logon</th>
    <th>This logon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.group_id %></td>
    <td><%= user.name %></td>
    <td><%= user.password %></td>
    <td><%= user.active %></td>
    <td><%= user.admin %></td>
    <td><%= user.email %></td>
    <td><%= user.primary %></td>
    <td><%= user.invited %></td>
    <td><%= user.last_logon %></td>
    <td><%= user.this_logon %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

